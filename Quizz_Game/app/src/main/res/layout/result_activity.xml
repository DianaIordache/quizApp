<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/Succes"
        android:layout_width="292dp"
        android:layout_height="30dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        android:background="#F4E2B6"
        android:text="Succes rate: "
        android:textAlignment="center"
        android:textColor="#3E3E3E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EmptyAnswer" />

    <TextView
        android:id="@+id/resultPage"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"
        android:background="#F4E2B6"
        android:text="Your score: "
        android:textAlignment="center"
        android:textColor="#3E3E3E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CorrectAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CorrectAnswer"
        android:layout_width="292dp"
        android:layout_height="30dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="19dp"
        android:background="#F4E2B6"
        android:text="Correct Answers:"
        android:textAlignment="center"
        android:textColor="#3E3E3E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wrongAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultPage" />

    <TextView
        android:id="@+id/EmptyAnswer"
        android:layout_width="292dp"
        android:layout_height="30dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="27dp"
        android:background="#F4E2B6"
        android:text="Empty Answers: "
        android:textAlignment="center"
        android:textColor="#3E3E3E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Succes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrongAnswer" />

    <TextView
        android:id="@+id/wrongAnswer"
        android:layout_width="292dp"
        android:layout_height="30dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="13dp"
        android:background="#F4E2B6"
        android:text="Wrong Answers:"
        android:textAlignment="center"
        android:textColor="#3E3E3E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/EmptyAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CorrectAnswer" />

    <Button
        android:id="@+id/quit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/buttons"
        android:drawableBottom="@drawable/buttons"
        android:text="QUIT GAME"
        android:textAllCaps="true"
        android:textColor="#151515"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/again" />

    <Button
        android:id="@+id/again"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttons"
        android:drawableBottom="@drawable/buttons"
        android:text="PLAY AGAIN"
        android:textAllCaps="true"
        android:textColor="#151515"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Succes" />
</androidx.constraintlayout.widget.ConstraintLayout>